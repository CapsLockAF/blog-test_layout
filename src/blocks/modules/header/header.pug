
header#header
    .container.flex_wrap
        a.logo(title="Go to Home page" href='index.html')
            picture
                source(srcset="img/logo.webp", type="image/webp")
                img(src="img/logo.png", alt="GUI")

        nav(aria-label='Breadcrumb').header__menu
            ul.header__menu-list
                li.header__menu-item
                    a.header__menu-ref(title="Home" href="#!") HOME

                li.header__menu-item
                    a.header__menu-ref(class=(active === "Articles" ? "menu-active" : undefined) title="Articles" href="index.html") ARTICLES

                li.header__menu-item.dropdown
                    a.header__menu-ref.dropdown__heading(class=(active === "Videos" ? "menu-active" : undefined) title="Videos" href="#!") VIDEOS
